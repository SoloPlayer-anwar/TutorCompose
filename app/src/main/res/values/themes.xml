<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TutorCompose" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/parentColor</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.TutorCompose">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="android:colorPrimary">@color/parentColor</item>
        <item name="postSplashScreenTheme">@style/Theme.TutorCompose</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>
</resources>